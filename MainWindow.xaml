<Window x:Class="Air_Folder.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Air Folder"
        Width="700" Height="500"
        WindowStartupLocation="CenterScreen">

    <Grid Margin="10,10,10,10">
        <Grid.ColumnDefinitions>
            <!-- Колонка для вкладок -->
            <ColumnDefinition Width="30.214"/>
            <ColumnDefinition Width="90"/>
            <!-- Колонка для панели содержимого -->
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <!-- Вертикальные вкладки слева -->
        <TabControl Grid.Column="0" x:Name="VerticalTabControl" 
                    TabStripPlacement="Left"
                    Margin="0,0,10,0" Grid.ColumnSpan="2">
            <TabItem Header="Общие"/>
            <TabItem Header="Мои стеки"/>
        </TabControl>

        <!-- Область настроек справа -->
        <ContentControl Grid.Column="2" x:Name="SettingsContent" Margin="3,0,0,0" />
    </Grid>
</Window>
