<Window x:Class="Air_Folder.CrosshairWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStyle="None"            
        AllowsTransparency="True"
        Background="Transparent"
        ShowInTaskbar="False"
        Topmost="True"
        Focusable="False"
        IsHitTestVisible="False"
        Width="32" Height="32"
        ResizeMode="NoResize"
        >
    <Canvas>
        <!-- Горизонтальная линия крестика -->
        <Line X1="0" Y1="0" X2="32" Y2="0" Stroke="Red" StrokeThickness="32" HorizontalAlignment="Left" Canvas.Top="16" VerticalAlignment="Top" Visibility="Collapsed"/>
        <Line X1="0" Y1="16" X2="16" Y2="16" Stroke="Red" StrokeThickness="2" HorizontalAlignment="Center" VerticalAlignment="Center" Width="9"/>
        <Line X1="0" Y1="16" X2="16" Y2="16" Stroke="Red" StrokeThickness="2" HorizontalAlignment="Center" VerticalAlignment="Center" Width="9" Canvas.Left="23"/>
        <Ellipse Width="16" Height="16" Stroke="Red" StrokeThickness="2" Canvas.Left="8" Canvas.Top="8"/>
        <!-- Вертикальная линия крестика -->
        <Line X1="16" Y1="0" X2="16" Y2="32" Stroke="Red" StrokeThickness="2" HorizontalAlignment="Center" Height="9" VerticalAlignment="Center"/>
        <Line X1="16" Y1="0" X2="16" Y2="32" Stroke="Red" StrokeThickness="2" HorizontalAlignment="Center" Height="9" VerticalAlignment="Center" Canvas.Top="23"/>
        <Ellipse Width="4" Height="4" Stroke="Red" StrokeThickness="1" Canvas.Left="14" Canvas.Top="14" Fill="Red" HorizontalAlignment="Center" VerticalAlignment="Center"/>
    </Canvas>
</Window>
